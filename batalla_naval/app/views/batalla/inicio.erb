	<body>

	<h1>Batalla Naval</h1>

	<p> <h4><%= @tablero_creado %></h4> </p>

	<form method="POST" action="crear_tablero">
		 <%= csrf_token_field %>
		 <h3> Crear Tablero </h3>
		 <p>	
		 	Alto:
		 	<input type="text" name="x" id="dimension1"/>
		 </p>
		 <p>
			Ancho:
			<input type="text" name="y" id="dimension2"/>
		 </p>
		<input type="submit" value="Setear dimensiones"/>
	</form>
	------------------------------------------------------------------------------
	<p> <h4><%= @barco_creado %></h4> </p>

	<form method="POST" action="crear_barco">
		<%= csrf_token_field %>
		<h3> Crear Barco </h3>
		<h4>Posiciones del Barco</h4>

		<p>Posición uno: 	<input type="text" name="posicion_uno" id="en_posiciones_uno"/> *</p>
		<p>Posición dos:	<input type="text" name="posicion_dos" id="en_posiciones_dos"/> *</p>
		<p>Posición tres:	<input type="text" name="posicion_tres" id="en_posiciones_tres"/> *</p>
		<p>Posición cuatro:	<input type="text" name="posicion_cuatro" id="en_posiciones_cuatro"/> *</p>
		<p>Posición cinco:	<input type="text" name="posicion_cinco" id="en_posiciones_cinco"/> *</p>

		<p>*Las posiciones deben ser definidas como, por ej: "posicion x del barco:posicion y del barco"</p>
		<p>Maximas secciones por barco: 5</p>
		 
		<input type="submit" value="Añadir Barco a flota"/>
	</form>

	</body>
</html>